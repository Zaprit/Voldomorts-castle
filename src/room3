  echo "at which point a cheese wheel bursts into flame"
  echo "the room is full of the smell of swiss, no chedder, no gruy√®re."
  echo ""
  echo "Where too"
  echo "1) NE"

  # Get user input
  read d

  case "$d" in

    1)
      room1
      ;;
    *)
      echo "not an option"
      room3
  esac
}
